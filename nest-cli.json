{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "assets": [
      "**/*.hbs",
      "**/*.html",
      "**/*.svg"
    ],
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "databases": {
      "type": "library",
      "root": "libs/databases",
      "entryFile": "index",
      "sourceRoot": "libs/databases/src",
      "compilerOptions": {
        "tsConfigPath": "libs/databases/tsconfig.lib.json"
      }
    },
    "als": {
      "type": "library",
      "root": "libs/als",
      "entryFile": "index",
      "sourceRoot": "libs/als/src",
      "compilerOptions": {
        "tsConfigPath": "libs/als/tsconfig.lib.json"
      }
    },
    "custom-logger": {
      "type": "library",
      "root": "libs/custom-logger",
      "entryFile": "index",
      "sourceRoot": "libs/custom-logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/custom-logger/tsconfig.lib.json"
      }
    },
    "requests": {
      "type": "library",
      "root": "libs/requests",
      "entryFile": "index",
      "sourceRoot": "libs/requests/src",
      "compilerOptions": {
        "tsConfigPath": "libs/requests/tsconfig.lib.json"
      }
    },
    "files": {
      "type": "application",
      "root": "apps/files",
      "entryFile": "main",
      "sourceRoot": "apps/files/src",
      "compilerOptions": {
        "tsConfigPath": "apps/files/tsconfig.app.json"
      }
    },
    "payments": {
      "type": "application",
      "root": "apps/payments",
      "entryFile": "main",
      "sourceRoot": "apps/payments/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payments/tsconfig.app.json"
      }
    },
    "application-notification": {
      "type": "library",
      "root": "libs/application-notification",
      "entryFile": "index",
      "sourceRoot": "libs/application-notification/src",
      "compilerOptions": {
        "tsConfigPath": "libs/application-notification/tsconfig.lib.json"
      }
    },
    "paginator": {
      "type": "library",
      "root": "libs/paginator",
      "entryFile": "index",
      "sourceRoot": "libs/paginator/src",
      "compilerOptions": {
        "tsConfigPath": "libs/paginator/tsconfig.lib.json"
      }
    },
    "decorators": {
      "type": "library",
      "root": "libs/decorators",
      "entryFile": "index",
      "sourceRoot": "libs/decorators/src",
      "compilerOptions": {
        "tsConfigPath": "libs/decorators/tsconfig.lib.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "async-local-storage": {
      "type": "library",
      "root": "libs/async-local-storage",
      "entryFile": "index",
      "sourceRoot": "libs/async-local-storage/src",
      "compilerOptions": {
        "tsConfigPath": "libs/async-local-storage/tsconfig.lib.json"
      }
    },
    "base-types-enum": {
      "type": "library",
      "root": "libs/base-types-enum",
      "entryFile": "index",
      "sourceRoot": "libs/base-types-enum/src",
      "compilerOptions": {
        "tsConfigPath": "libs/base-types-enum/tsconfig.lib.json"
      }
    }
  }
}