{
  "name": "somegram-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:prod": "node dist/apps/somegram-backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest -i --testPathPattern=apps/gateway/*",
    "test:payments": "jest -i --testPathPattern=apps/payments/* --passWithNoTests",
    "test:dev": "cross-env NODE_ENV=test jest -i",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --passWithNoTests --config ./apps/gateway/test/jest-e2e.json",
    "test:e2e2": "jest --passWithNoTests --config ./apps/files/test/jest-e2e.json",
    "prisma:gen:gateway": "prisma generate --schema prisma/gateway/gateway-schema.prisma",
    "prisma:gen:payments": "prisma generate --schema prisma/payments/payments-schema.prisma",
    "prisma:migrate-dev:gateway": "dotenv -e ./apps/gateway/.env.dev -- prisma migrate dev --schema prisma/gateway/gateway-schema.prisma",
    "prisma:migrate-dev:payments": "dotenv -e ./apps/payments/.env.dev -- prisma migrate dev --schema prisma/payments/payments-schema.prisma",
    "prisma:migrate:gateway": "prisma migrate deploy --schema prisma/gateway/gateway-schema.prisma",
    "prisma:migrate:payments": "prisma migrate deploy --schema prisma/payments/payments-schema.prisma",
    "prisma:migrate-test:gateway": "dotenv -e ./apps/gateway/.env.test -- prisma migrate dev --schema prisma/gateway/gateway-schema.prisma",
    "build:gateway": "yarn prisma:gen:gateway && nest build gateway",
    "start:dev:gateway": "cross-env NODE_ENV=development nest start gateway --watch",
    "start:gateway": "NODE_ENV=production node dist/apps/gateway/main",
    "build:files": "nest build files",
    "start:dev:files": "cross-env NODE_ENV=development nest start files --watch",
    "start:files": "NODE_ENV=production node dist/apps/files/main",
    "build:payments": "yarn prisma:gen:payments && nest build payments",
    "start:dev:payments": "cross-env NODE_ENV=development nest start payments --watch",
    "start:payments": "NODE_ENV=production node dist/apps/payments/main",
    "ngrok:connect": "ngrok http 3000"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@aws-sdk/client-s3": "^3.614.0",
    "@aws-sdk/lib-storage": "^3.617.0",
    "@nestjs-cls/transactional": "^2.4.0",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.2",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.10",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/platform-socket.io": "^11.0.6",
    "@nestjs/schedule": "^5.0.0",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/websockets": "^11.0.6",
    "@paypal/paypal-server-sdk": "^0.6.1",
    "@prisma/client": "6.1.0",
    "@types/bluebird": "^3.5.42",
    "@types/cookie-parser": "^1.4.7",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/stripe": "^8.0.417",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "bluebird": "^3.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "crc32": "^0.2.2",
    "dataloader": "^2.2.3",
    "graphql": "^16.10.0",
    "mongoose": "^8.8.0",
    "multer": "^1.4.5-lts.1",
    "nestjs-cls": "^4.3.0",
    "nestjs-dataloader": "^9.0.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-headerapikey": "^1.2.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "stripe": "^17.3.1",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "winston-transport": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/databases(|/.*)$": "<rootDir>/libs/databases/src/$1",
      "^@app/als(|/.*)$": "<rootDir>/libs/als/src/$1",
      "^@app/custom-logger(|/.*)$": "<rootDir>/libs/custom-logger/src/$1",
      "^@app/requests(|/.*)$": "<rootDir>/libs/requests/src/$1",
      "^@app/application-notification(|/.*)$": "<rootDir>/libs/application-notification/src/$1",
      "^@app/paginator(|/.*)$": "<rootDir>/libs/paginator/src/$1",
      "^@app/decorators(|/.*)$": "<rootDir>/libs/decorators/src/$1",
      "^@app/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@app/async-local-storage(|/.*)$": "<rootDir>/libs/async-local-storage/src/$1",
      "^@app/base-types-enum(|/.*)$": "<rootDir>/libs/base-types-enum/src/$1"
    }
  }
}
